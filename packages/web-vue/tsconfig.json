{
  "compilerOptions": {
    "declaration": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "esnext",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
  },
  "include": [
    "components",
    "*.d.ts",
  ]
}
